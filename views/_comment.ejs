    <p>
        <%if(locals.user && (locals.user.id === comment.user.id || locals.user.id === post.user.id)){%>
            <button><a class="delete-comment-button" href="/comments/destroy/<%=comment._id%>">Delete comment</a></button>
            <%}%>
