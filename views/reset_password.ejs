<link rel="stylesheet" href="<%= staticPath('css/form.css')%>">
<div class="form">
    <h1 style="margin: 0 0 2rem 0">Reset Password</h1>
    <% if(accessToken){%>
        <form action="/users/reset-password/update/<%=accessToken%>" method="post">
            <input type="password" name="new_password" placeholder="Enter new password" required style="margin-top:2.5rem">
            <input type="password" name="confirm_new_password" placeholder="confirm new password" required>
            <input type="submit" value="submit" style="cursor: pointer; margin-top: 1rem">
        </form>
    <%} else{%>
    <form action="/users/reset-password/get-email" method="post">
        <input type="email" name="email" placeholder="enter your email" required style="margin-top:2.5rem">
        <input type="submit" value="submit" style="cursor: pointer; margin-top: 1rem">
    </form>
    <%}%>
</div>