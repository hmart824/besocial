<link rel="stylesheet" href="<%= staticPath('css/form.css')%>">
<div class="form">
    <h1 style="margin-top:0">Sign Up</h1>
    <form action="/users/create" method="post">
        <input type="text" name="name" placeholder="Enter Your name" required style="margin-top:2.5rem">
        <input type="email" name="email" placeholder="Enter Your email" required>
        <input type="password" name="password" placeholder="Enter Your password" required>
        <input type="password" name="confirm_password" placeholder="confirm_password" required>
        <input type="submit" value="sign up" style="cursor: pointer; margin-top: 1rem">
        <button><a href="/users/auth/google">Sign up with Google</a></button>
    </form>
</div>
